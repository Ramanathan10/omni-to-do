// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("active") // active, someday, completed, dropped
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tasks       Task[]

  @@index([status])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  notes       String?
  status      String    @default("inbox") // inbox, active, completed, someday

  // Dates - critical for OmniFocus workflow
  dueDate     DateTime?
  deferDate   DateTime? // When task becomes available to work on
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationships
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Self-referential hierarchy for subtasks
  parentId    String?
  parent      Task?     @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Task[]    @relation("TaskHierarchy")

  // Ordering within projects/lists
  sortOrder   Int       @default(0)

  @@index([status])
  @@index([projectId])
  @@index([parentId])
  @@index([deferDate])
  @@index([dueDate])
  @@index([status, deferDate, dueDate]) // Composite index for "available" query optimization
}
